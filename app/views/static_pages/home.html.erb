<% provide(:title, 'Home') %>
<% if signed_in? %>
  <% if is_community_active? %>
  <div class="row">
    <aside class="span6">
      <section>
        <%= render 'shared/user_info' %>
        <br>
      </section>
      <section style="width:180px;margin:2px;">
        <%= render 'shared/stats' %>
      </section>
    </span>
    </aside>
     <div id="cu_post" class="span12">
      <%= render 'posts/communities_post' %> 
    </div>
  </div> 
  <% else %>
    <script type="text/javascript">
    window.location.href="/communities" 
  </script>
  <% end %>

<% else %>
<div class="center hero-unit container-fluid canvas" style="margin-top:70px;">
  <span class="center hero-unit span10">
      <h1>Welcome to ComUnity</h1>

    <h2>
      This is a
      <a href="#">Event Management</a>
       application.
    </h2>

    <%= link_to "Sign up now!", '/signup', class: "btn success" %>
  </span>

<span class="center">
           
             <%= render 'sessions/signin' %>
             
    
</span>
</div>
