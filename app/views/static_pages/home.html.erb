<% provide(:title, 'Home') %>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
     <div class="span8">
      <h3><a href="#" id="mp_link">Micropost Feed </a>| <a href="#" id="gp_link">Grouppost Feed</a></h3>
      <div id="mp_div"> <%= render 'shared/feed' %> </div>
      <div id="gp_div" style="display: none"> <%= render 'shared/group_feed' %> </div>

    </div>
  </div>  
<% else %>
<div class="center hero-unit">
  <h1>Welcome to the EMS App</h1>

  <h2>
    This is the home page for the
    <a href="#">Rashi - Event Management</a>
     application.
  </h2>

  <%= link_to "Sign up now!", '/signup', class: "btn btn-large btn-primary" %>
</div>

<%= link_to image_tag("indy.png", alt: "Rashi"), 'http://rashi.org/' %>
<% end %> 
<script type="text/javascript">
$("#mp_link").click(function(){
  this.style.backgroundColor="#BDBDBD";
  $("#gp_link").css("background-color","#ffffff");
  $("#gp_div").hide();
  $("#mp_div").show();
})
$("#gp_link").click(function(){
  $("#gp_link").css("background-color","#BDBDBD");
  $("#mp_link").css("background-color","#ffffff");
  $("#mp_div").hide();
  $("#gp_div").show();
})
</script>