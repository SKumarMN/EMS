<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag "application", media: "all" %>
    
    <%= javascript_include_tag "application" %>



  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/swfobject/2.2/swfobject.js"></script>



        <%= csrf_meta_tags %>
    <%= render 'layouts/shim' %> 
  </head>
  <body>
  	<%= render 'layouts/header' %>
    
    
    <div class="container1">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <% if signed_in? %>
      <aside>

      <div id="menu" class="stick">
                <h3>Menu</h3>
          <ul>
            <% if is_community_active? %>
            <li class="active"><%= link_to "Home", root_path %></li>
            <% end %>
            <li><%= link_to "ComUnity", communities_path %><span style="display:none"><%= link_to "", communities_path, id: 'home_comunity' %></span></li>
           <% if is_community_active? %>
            <li><%= link_to "Users", users_path %></li>
            <!--<li><%= link_to "Create Events", new_event_path %></li>-->
            <li><%= link_to "Events", events_path %></li>
            <li><%= link_to "Photos", photos_path %></li>
            <li><%= link_to "Groups", groups_path %></li>
           <!-- <li><%= link_to "Create group", new_group_path %></li>
            <li><%= link_to "Follow / Unfollow group", groups_path %></li>-->
            <li><%= link_to "Group post", posts_path %></li>
            <% end %>
          </ul>
          

      </div>
      </aside> 

        <div data-role="page" class="pages" id="home">
          
          
          <div data-role="content" id="ctn">
            <div id="content">
              <div id="mainHome">
                  <%= yield %>
              </div>
            </div>
           <!-- <%= render 'layouts/footer' %>
            <%= debug(params) if Rails.env.development? %>-->
          </div>  
      </div>
      <% else %>
          <%= yield %>
      <% end %>
 

  </body>
  <script type="text/javascript">
  $(function() {
    $('#menu a').live('click', function() {
        $('#content').load(this.href);
        var p = $(this).parent();
        if ($(p).hasClass('active')) {
            $("#menu li").removeClass('active');
        } else {
            $("#menu li").removeClass('active');
            $(p).addClass('active');
        }
        return false;
    });
  });



  </script>
</html>
