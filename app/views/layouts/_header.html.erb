<header class="container-fluid">
  <div class="topbar">  
    <div class="topbar-inner navbar ">
      <div class="container canvas">
        <%= link_to "Scrapbook", root_path, id: "logo1", class: "brand" %>
        <nav>
          <ul class="nav pull-right">
            <li ><%= link_to "Home", root_path %></li>
            <% if signed_in? %>
            <li><%= link_to "Users", users_path %></li>
            <% end %>
              <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Events <b class="caret1"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Create Events", new_event_path %></li>
                <li><%= link_to "All Events", events_path %></li>
                
              </ul>
            </li>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Photos <b class="caret1"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Camera roll", photos_path %></li>
                <li><%= link_to "Albums", albums_path %></li>
                
              </ul>
            </li>
          <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Groups <b class="caret1"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Create group", new_group_path %></li>
                <li><%= link_to "Follow / Unfollow", groups_path %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Group Post", posts_path %>
                </li>
              </ul>
            </li>
          
          <% if signed_in? %>
            
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret1"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</div>
</header>