<script type="text/javascript">
$(document).ready(function(){
  $('.gravatar').addClass('thumbnail');  
  $('#invite').toggle();
  $('#moderator').toggle();
    $('#moderatorDiv').hover(function(){
      $('#moderator').toggle();
      },function(){
      $('#moderator').toggle();
    });
    $('#inviteDiv').hover(function(){
      $('#invite').toggle();
      },function(){
      $('#invite').toggle();
    });
