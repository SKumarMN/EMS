<a href="<%= user_path(current_user) %>" data-remote="true">
  <%= gravatar_for current_user, size: 100 %>
</a>
<h1>
  <%= current_user.name %>
</h1>
<span>
  <%= link_to "view my profile", current_user, remote: true %>
</span>
<script type="text/javascript">
$(document).ready(function(){

  $('.gravatar').addClass('thumbnail');

    
});
</script>