          </li>
        <% end %>
      </div>
      <div id="editDiv" style="display:none;" >
        <div class="span9">
          <%= render 'shared/error_messages', object: f.object %>
                <%= f.label "title: " %>
                <%= f.text_field :title %>
                <br>
                <%= f.label "description:" %>
                <%= f.text_area :description, placeholder: "Album description...", :rows=>2, :cols=>40 %>
