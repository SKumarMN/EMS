     <div style="width:640px;">
      <div id="floater" style="float:left;"><h2 ><a href="#"><%= @album.title %></a></h2></div>
       <%= link_to "Edit", '#', id: "edit",  class: "btn secondary pull-right " %>
       <%= link_to "Delete album", '#', id: "delAlbum",  class: "btn danger pull-right ", style:"display:none;" %>
       <%= link_to "Delete photo", '#', id: "delPhoto",  class: "btn danger pull-right ", style:"display:none;margin-right:10px;" %>
       
        <br><br>
            <div id="gallery1">
     <ul id="grid">
    <% @album.photos.each do |photo| %>
      <li>
      <div  class="img_zoom" >
    <a href="<%= photo.pic_url %>"  class="lightview" 
   data-lightview-group="thumbnail-" 
   data-lightview-group-options="controls: 'thumbnails'">
    <%= cl_image_tag(photo.pic_url(:thumb), class:"image_al_c")  %></a> 
    </div>
    </li>
  
  <% end %>
  </ul>
  </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function(){
           $(window).scroll( function() {
                if ($(window).scrollTop() > ($('#floater-wrapper').offset().top)-40)
                    $('#floater').addClass('floating');
                 // console.log("addClass");
                else
                    $('#floater').removeClass('floating');
                 // console.log("removeClass");
            } );

           $("#edit").click(function(){
            $("#edit").hide();
            $("#delPhoto").show();
            $("#delAlbum").show();
           });
        });
    </script>