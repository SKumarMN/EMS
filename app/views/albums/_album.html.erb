    <script type="text/javascript">
        $(document).ready(function(){
          /*
             $(this).click(function(e) {

              if($('.editPhotos').hasClass('disabling')){
               e.preventDefault();
              } 
                  //do other stuff when a click happens
              });*/

            var update_bool = false;
            $("#edit").click(function(){
              $("#edit").hide();
              $("#cancel").show();
              $("#delAlbum").show();
              $("#nonEditDiv").hide();
              $("#editDiv").show();
            // $("a.lightview").removeAttr("href").css("cursor","pointer");
            //$('a.editPhotos').addClass('disabling');
            //$('a.editPhotos').removeClass('lightview');
           });

           $("#cancel").click(function(){
            $("#cancel").hide();
            $("#edit").show();
            $("#delAlbum").hide();
            $("#delPhoto").hide();
            $("#nonEditDiv").show();
            $("#editDiv").hide();
            update_bool=false;
            //$('a.editPhotos').removeClass('disabling');
            //$('a.editPhotos').addClass('lightview');
           });


            var photoMode = 0;
            
           $('.image_al_c').click(function(){
             var id = this.id;
             
          //   if($(".img_zoom a").hasClass("disabling")){


                 if($("#photo_chk_"+id).is(':checked')){
                    $("#photo_chk_"+id).prop("checked", false);
                    $("#a-img_"+id).removeClass("img-selected");
                    $("#a-img_chk_"+id).hide();
                    photoMode--;


                 }else{

                    $("#photo_chk_"+id).prop("checked", true);
                    $("#a-img_"+id).addClass("img-selected");
                    $("#a-img_chk_"+id).show();
                    photoMode++;
                  }
                  if(!update_bool){
                    if(!(photoMode==0)){
                      $("#delAlbum").hide();
                      $("#delPhoto").show();
                    }else{
                      $("#delAlbum").show();
                      $("#delPhoto").hide();
                    }
                  }

                    if(photoMode==photoCount){
                      $("#delAlbum").show();
                      $("#delPhoto").hide(); 
                     }
             // }
          }); 
          
          $("a.lightview1").fancybox({
            'transitionIn'  : 'elastic',
            'transitionOut' : 'elastic',
            'speedIn'   : 600, 
            'speedOut'    : 200, 
            'overlayShow' : false
          });
          $("input").bind("paste",function(){
              $("#delAlbum").hide();
              $("#delPhoto").show();
              update_bool=true;
          });
          $("input").change(function(){
              $("#delPhoto").show();
              $("#delAlbum").hide();
              update_bool=true;
          });  
          $("textarea").bind("paste",function(){
              $("#delPhoto").show();
              $("#delAlbum").hide();
              update_bool=true;
          });
          $("textarea").change(function(){
              $("#delPhoto").show();
              $("#delAlbum").hide();
              update_bool=true;
          });
          $("select").change(function(){
              $("#delPhoto").show();
              $("#delAlbum").hide();
              update_bool=true;
          });

        });
    </script>