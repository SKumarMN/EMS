     <div style="width:640px;">
      <div id="floater" style="float:left;"><h2 ><a href="#">Camera Roll</a></h2></div><br><br><br>
      
      <div id="gallery1">
         <ul id="grid">
         <% @camera_roll.each do |photo| %>
          <li>
          <div  class="img_zoom" >
            <a href="<%= photo.pic_url %>"  class="lightview" 
           data-lightview-group="thumbnail-" 
           data-lightview-group-options="controls: 'thumbnails'">
            <%= cl_image_tag(photo.pic_url(:thumb), class:"image_al_c")  %></a> 
        </div>
        </li>
      
      <% end %>
      </ul>
      </div>
    </div>

   <script type="text/javascript">
        $(document).ready(function(){
           $(window).scroll( function() {
                if ($(window).scrollTop() > ($('#floater-wrapper').offset().top)-40)
                    $('#floater').addClass('floating');
                 // console.log("addClass");
                else
                    $('#floater').removeClass('floating');
                 // console.log("removeClass");
            } );
        });
    </script>
