   <div id="camera_rolls" style="margin-left:250px;margin-bottom:0px;">
    <ul class="breadcrumb" style="width:667px">
      <li><a href="#" class="marginLeft10">Albums</a> </li>

      <span style="margin-left:510px;"><li><%= link_to "Create Album", '#', id: "addTo",  class: "uibutton icon add " %></li></span>
    </ul>
  </div>

  <%= form_for(@album, remote: true, :html => {:multipart => true}) do  |f| %> 
  <div id="modal" style="display:none" >
    <div id="modal-from-dom" class="modal hide fade in" style="display: block;width:700px;">
      <div class="modal-header">
        <a href="#" id="closeX" class="close">Ã—</a>
        <h3>Create album</h3>
      </div>
      <div class="modal-body" style="max-height:450px;">
        <div class="row">
          <div class="span14 ui-front "  >

           <%= render 'shared/error_messages', object: f.object %>
           <div class="center_block clearfix pull-left">
            <%= f.label :title %>
            <div class="input">
              <%= f.text_field :title, :placeholder=>"Title" %>
            </div>
          </div>

          <div class="center_block clearfix pull-left">
            <%= f.label :description %>
            <div class="input">
              <%= f.text_area :description, :placeholder=>"Description", class: ' inherit_width', :title=>"Description", rows: 3, cols: 75  %> 
            </div>
          </div>
          <span class=" overrideClass">
            <div class="center_block clearfix pull-left">
              <%= f.label "privacy:" %>
              <div class="input">
                <%= f.select :privacy, ["Public", "Follower", "Private"] %>
              </div>
            </div>
          </span>
          
          <div class="center_block clearfix pull-left">
          <%= fields_for :photos, Photo.new, :child_index => 'NEW_RECORD' do |photo_form| %>
          <%= photo_form.file_field :pic, id: "pic1", :multiple => true, style: "width:1px; height:1px; padding:0px;  left:0px;" %>  
          <% end %>
              <div class="input">
                <canvas id="imageCanvas1" style = "border: 1px solid #ddd; padding:5px; align:center" >select photos</canvas>
              </div>
         </div>
          </span>
        </div>
      </div>
    </div>
    <div class="modal-footer" >
      <%= f.submit "Create Album", class: "btn primary pull-right", id: "crtGrp" %> 
    </div>
  </div>
</div>
<% end %>

<% unless @albums.nil? %>

<div id="gallery1" class="span17" style="margin-left:25px;margin-bottom:0px;">
 <ul id="grid" >

   <% @albums.each do |album| %>
   <% unless album.photos[0].nil? %>
   <li>
    <div  class="img_zoom" >
     <%= link_to cl_image_tag(album.photos[0].pic_url(:small), class:"image_al_c thumbnail") , album, class:"albumLink", remote: true %>
     <h5 style="float:right;"><%= link_to album.title, album, class:"albumLink", remote: true %></h5>
   </div>
 </li>
 <% end %> 
 <% end %>
</ul>
</div>

<% end %>  

<script type="text/javascript">
$(document).ready(function(){

  $("#upload2").click(function(){
    $("#pics").click();
  });

  $("#addTo").click(function(){
    $('#modal').modal('show');
  });
  $("#closeX").click(function(){
    $('#modal').modal('hide');
  });

  $("#crtGrp").click(function(){
    $('#modal').modal('hide');
  });

  var imageLoader = document.getElementById('pic1');
  imageLoader.addEventListener('change', handleImage, false);
  $("#imageCanvas1").click(function(){
    $("#pic1").click();
  });

  var canvas = document.getElementById('imageCanvas1');
  var ctx = canvas.getContext('2d');
  ctx.font="30px Arial";
  ctx.fillText("Select photos",10,50);

  function handleImage(e){
    var canvas = document.getElementById('imageCanvas1');
    var ctx = canvas.getContext('2d');
    var iCnt=0;
    var files = e.target.files;
    canvas.width = 500;
    canvas.height = 155*(Math.ceil(files.length/3));
    for( var i = 0, len = files.length; i < len; i++) 
    {
      if(files[i])
      {
        var reader = new FileReader();
        reader.onload = function(event){
          var img = new Image();

          img.onload = function(){
            var ratioPx = 150;
            var sWidth =ratioPx;
            var ratio = img.width/sWidth;
            var sHeight = img.height/ratio;   
            if(sHeight>ratioPx){
             sHeight =ratioPx;
             ratio = img.height/sHeight;
             sWidth = img.width/ratio;  
           }
           ctx.drawImage(img, 155*(iCnt%3),155*(Math.floor(iCnt/3)),sWidth,sHeight);
                  //ctx.drawImage(img,0,0,sWidth,sHeight);
                  iCnt++;
                }
                img.src = event.target.result;
              }
              reader.readAsDataURL(e.target.files[i]);     
            }
          }
        }


      });


   </script>