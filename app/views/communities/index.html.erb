  $(".sidetabs").removeClass('sidetabs_selected');
  $(this).addClass('sidetabs_selected');
  if($(this).hasClass('notActive')){
    $('#cu_pic').hide('slow');
  }else{
    $('#cu_pic').show('slow');
  }
  $(this).next('a').click();
});

