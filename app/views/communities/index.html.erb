<% unless @selected_community.nil? %>
<% provide(:title, @selected_community.name) %>
<% else %>
<% provide(:title, "Create ComUnity") %>
<script type="text/javascript">
$(document).ready(function(){
  $('#public_comUnity').click();
  $('#public_li').addClass('sidetabs_selected');
});
</script>
<% end %>
<div class="row">
  <aside class="span6">
    <section id="cu_pic">
    <% unless @selected_community.nil? %>
      <%= render partial: 'communities/cu_pic', locals: {community: @selected_community} %>
    <% end %>
    </section>

    <section id="comUnity_sec" style="background-color:#e5e5e5;padding:10px;" class="well">
      <span style="clear:both"></span>
      <%= link_to "Create Community", '#', id: "ComUnity",  class: " pull-right uibutton icon add" %><br><br>
      <div id="comUnity_div">    
        <% unless @selected_community.nil? %>
        <li class="sidetabs sidetabs_selected" style="list-style-type: none;padding:5px; margin:5px;">
          <h6><%= link_to  "Active: " << @selected_community.name , '#', remote: true %></h6>
        </li>
        <%= link_to "", active_com_communities_path, id: "active_comUnity", remote: true %>
       <li class="sidetabs notActive" style="list-style-type: none;padding:5px; margin:5px;">
          <h6><%= link_to  "Moderated", "#", remote: true %>
          <span class="pull-right" style="color:orange;font-size:15px;margin:5px;"><%= if @requested_users_all > 0 then @requested_users_all end %></span>
        <span class="pull-right" style="font-size:10px;margin:7px 0px;"><%= if @requested_users_all > 0 then "Pending req. " end %></span>
        </h6>
        </li>
        <%= link_to "", moderated_com_communities_path , id: "moderated_comUnity", remote: true %>
        <% end %>
        <li class="sidetabs notActive" style="list-style-type: none;padding:5px; margin:5px;">
          <h6><%= link_to  "Joined", "#", remote: true %></h6>
        </li>
        <%= link_to "", joined_com_communities_path , id: "joined_comUnity", remote: true %>
        <li class="sidetabs notActive"id="public_li" style="list-style-type: none;padding:5px; margin:5px;">
          <h6><%= link_to  "Public", "#",  remote: true %></h6>
        </li>
        <%= link_to "", public_com_communities_path,id: "public_comUnity", remote: true %>
        <li class="sidetabs notActive" style="list-style-type: none;padding:5px; margin:5px;">
          <h6><%= link_to  "Private", '#', remote: true %></h6>
        </li>
        <%= link_to "", private_com_communities_path , id: "private_comUnity", remote: true %>

      </div>
    </section>

  </aside>
  <aside id="right" style="float: right;width:220px;margin-right:10px;">
    <div id="comUnity_stats">
      <%= render partial: 'shared/comUnity_stats', locals: {ad_users: @ad_users, inv_users: @inv_users, requested_users: @requested_users, community: @selected_community } %>
    </div>
  </aside>
  <div id="comUnity_list" class="span13" style="margin-top:5px;">
    <div id="about_comUnity" >  
     <%= render partial: 'communities/about', locals: {ad_users: @ad_users, inv_users: @inv_users, community: @selected_community} %>
   </div>

 </div>

 <%= form_for( Community.new, remote: true, :html => {:multipart => true}) do |f| %>
 <div id="modal" style="display:none;" >
  <div id="modal-from-dom2" class="modal hide fade in" style="display: block;width:700px;">
    <div class="modal-header">
      <a href="#" id="closeX" class="close">Ã—</a>
      <span style="font-size:20px;line-height: 2;">Create ComUnity</span>
    </div>
    <div class="modal-body" style="max-height:550px;">
    <% unless @selected_community.nil? %>
    <% end %>
      <div class="row">
        <div class="span14 ui-front">

         <%= render 'shared/error_messages', object: f.object %>

         <div class="center_block clearfix">
          <%= f.label :name %>
          <div class="input">
            <%= f.text_field :name, :placeholder=>"Title" %></div>
          </div>

          <div class="center_block clearfix">
            <%= f.label :location %>
            <div class="input ">
              <%= f.text_field :address, :placeholder => :location, :size => 43, class: 'cu_with_autocomplete inherit_width', 'data-autocompleteUrl' => search_address_communities_path, id: "create_community_address" %>&nbsp;&nbsp;&nbsp;

              <%= link_to "View map", '#', id: "view_map_link_crt",  class: "uibutton icon prev" %>
            </div>
            <div class="input" id="view_map_crt">

            </div>
          </div>
          <div class="center_block clearfix">
            <%= f.label :description %>
            <div class="input">
              <%= f.text_area :description, :placeholder=>"Description", class: ' inherit_width', :title=>"Description", rows: 3, cols: 75  %> 
            </div>
          </div>


          <div class="center_block clearfix">
            <%= label_tag :privacy %>
            <div class="input">
              <%= f.select :privacy, options_for_select([["Public", "public"], ["Private", "private"], ["Secret", "secret"]]) %>
            </div>
          </div> 
          <div class="center_block clearfix">
            <%= label_tag "Add picture:" %>
            <%= f.fields_for :photo, Photo.new, :child_index => 'NEW_RECORD' do |photo_form| %>

            <%= photo_form.file_field :pic, id: "pic",style: "width:1px; height:1px; padding:0px;  left:0px;" %>  

            <% end %>
            <div class="input">
              <canvas id="imageCanvas" style = "border: 1px solid #ddd; padding:5px; align:center; width:200px;cursor:pointer" >select new image</canvas>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="modal-footer" >
      <%= f.submit "Create", class: "btn primary pull-right", id: "crtComUnity" %>  
    </div>
  </div>
</div>
<% end %>



