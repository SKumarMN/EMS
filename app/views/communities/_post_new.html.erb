<script type="text/javascript">

$(document).ready(function(){
  $.validate({
//    validateOnBlur : false,
    onSuccess : function() {
      $('.loading_page').show();
      $('#community_post_submit').attr('data-loading-text', 'Posting...');
      $('#community_post_submit').button('loading');
    },
  });
});

$("#group_post_select").click(function(){
  $('#modal_sel_grp').modal('show');
});
$("#closeX_sel_grp").click(function(){
  $('#modal_sel_grp').modal('hide');
});

$("#selGroup").click(function(){
  $('#modal_sel_grp').modal('hide');
});



var i=0;
$(".bgClrChg2").click( function() {
  var id = $(this).find('p').html();
    //console.log($(this).find(':checkbox').is(':checked'));
  if($(this).find(':checkbox').is(':checked')){
    $(this).find(':checkbox').prop("checked",false);
    $("#grp_check_"+id).prop("checked",false);
    $("#grp_label_"+id).hide();
    $(this).removeClass('tabs_selected');
    $(this).find('.select_unselect').html("Select");
    i--;
  }else{
    $(this).find(':checkbox').prop("checked",true);
       $("#grp_check_"+id).prop("checked",true);
       $("#grp_label_"+id).show();
       $(this).addClass('tabs_selected');
       $(this).find('.select_unselect').html("Unselect");
       i++;
    //console.log('i++');
  }
  if(i==0){
    $("#selGroup").hide();
    $("#sel_grp_label").hide();
  }else{
    $("#selGroup").show();
  $("#sel_grp_label").show();
  }
});
$("#selGroup").hide();
$("#sel_grp_label").hide();

</script>