        <div  class="img_zoom" style="float:left;" >
          <%= gravatar_for user, size: 52 %>
        </div>
         <p class="marginRight25">
          <% if current_user.is_cu_admin?(community)  && user.id != current_user.id %>
                        <%= link_to "Remove", "/communities/#{community.id}/unjoin_cu?user_id=#{user.id}", class: "uibutton pull-right ", remote: true, data: { confirm: "You sure?" } %>
          <% end %>
          <%= link_to user.name, user %>
        </p>
          <p><%= user.email %></p>
      </li>
      <% end %>
    <li style="clear:both;"></li>
    <% end %> 
  <% end %> 
  <% unless inv_users.nil? %>
    <% if inv_users.count > 0 %> 
    <h4><%="Member".pluralize(ad_users.count) %></h4>
      <% inv_users.each do |user|%>
      <li style="float:left;margin-left:15px; " class="tr-hover span13">
        <div  class="img_zoom" style="float:left;" >
          <%= gravatar_for user, size: 52 %>
        </div>
        <p class="marginRight25">
           <% if current_user.is_cu_admin?(community) && user.id != current_user.id %>
                        <%= link_to "Remove", "/communities/#{community.id}/unjoin_cu?user_id=#{user.id}", class: "uibutton pull-right ", remote: true, data: { confirm: "You sure?" } %>
          <% end %>
          <%= link_to user.name, user %>
        </p>
          <p><%= user.email %></p>
      </li>
      <% end %>
    <li style="clear:both;"></li>
    <% end %>
  <% end %>
</ul>



