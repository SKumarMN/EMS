<% provide(:title, 'Create group') %>
<h1>Create group</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@group) do |f| %>
    	 <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_field :description %>

      <%= f.check_box :privacy %>
      <%= label_tag :privacy %>

      <%= f.submit "Create my group", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>