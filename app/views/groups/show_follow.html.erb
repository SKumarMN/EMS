<% provide(:title, @title) %>
<div class="row">
  <aside class="span6">
      <section>
      <h1>
        <%= @group.name %>
        
      </h1>
      
    </section>
    <section>
      <span><b>Posts:</b> <%= link_to @group.posts.count, @group %>
      </span>
    </section>
    <section>
      <%= render 'shared/group_stats' %>
         <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate @users %>
    <% end %>
  </div>
</div>