<% provide(:title, @group.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        
        <%= @group.name %>
      </h1>
    </section>
    <section>
      <%= render 'shared/group_stats' %>
    </section>
  </aside>
  <div class="span8">
  	 <%= render 'follow_form' if signed_in? %>
    <% if @group.posts.any? %>
      <h3>Posts (<%= @group.posts.count %>)</h3>
      <ol class="microposts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>