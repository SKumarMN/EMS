var i=0;
$(".bgClrChg2").click( function() {
  var id = $(this).find('p').html();
  if($(this).find(':checkbox').is(':checked')){
    $(this).find(':checkbox').removeAttr("checked");
    $("#grp_check_"+id).removeAttr("checked");
    $("#grp_label_"+id).hide();
    $(this).removeClass('tabs_selected');
    i--;
  }else{
    $(this).find(':checkbox').attr("checked",true);
       $("#grp_check_"+id).attr("checked",true);
       $("#grp_label_"+id).show();
       i++;
       $(this).addClass('tabs_selected');
  }
  if(i==0){
  	$("#group_post_submit").hide();
  	$("#sel_grp_label").hide();
  }else{
  	$("#group_post_submit").show();
	  $("#sel_grp_label").show();
  }
});
$("#group_post_submit").hide();
$("#sel_grp_label").hide();
<% end %>


