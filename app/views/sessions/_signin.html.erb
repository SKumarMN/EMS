<% provide(:title, " - Sign in") %>


<div class="row1 offset8">
  <div class="span6 ">
<h1>Sign in</h1>
<br>
    <%= form_tag "/auth/identity/callback" do %>
  <div class="field">
    <%= label_tag :auth_key, "Email" , class: "span1" %><br>
    <%= text_field_tag :auth_key %>
  </div>
  <div class="field">
    <%= label_tag :password,"Password" , class: "span1"%><br>
    <%= password_field_tag :password %>
  </div>
  <p><%= link_to "forgotten password?", new_password_reset_path %></p>
  <div class="actions"><%= submit_tag "Sign in", class: "btn primary" %></div>
  <% end %>
