<% provide(:title, "Log In") %>


<div class="container  center-signin uiBoxWhite">
  <div class="span14 signin-name-div"><h3 class="signin-name">Smarthood Login</h3><br>
      <div class="alert-message block-message error">    
        <p><strong>Incorrect Email</strong></p><br>
        <ul class="post_grid">
          <li>The email you entered does not belong to any account.</li><br>
          <li>You can login using any email associated with your account. Make sure that it is typed correctly.</li>
        </ul>
      </div>
  </div>
  <div class="row">

    <%= form_tag "/auth/identity/callback" do %>
  
    <div class="center_block clearfix signin-maginleft">
      <%= label_tag :auth_key, "Email: " %>
      <div class="input">
        <%= text_field_tag :auth_key, nil , class: "xlarge" %>
      </div>
    </div>

    <div class="center_block clearfix signin-maginleft">
      <%= label_tag :password, "Password: " %>
      <div class="input">
        <%= password_field_tag :password, nil , class: "xlarge" %>
      </div>
    </div>

    <div class="center_block clearfix signin-maginleft">
      <div class="input">
        <strong><%= submit_tag "Log In", class: "btn primary" %></strong> or <%= link_to "Sign up for Smarthood", root_path , class: "font_strong" %>
      </div>
    </div>
    
    <div class="center_block clearfix signin-maginleft">
      <div class="input">
          <p><%= link_to "Forgot your password?", new_password_reset_path %></p>
      </div>
    </div>

  <% end %>



  </div>
</div>