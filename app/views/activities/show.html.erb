<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      
      <h1><%= @activity.title %></h1>
      <span><%= link_to "view my activities", @activity %></span>
      <span><b>Posts:</b> <%= @activity.posts.count %></span>
    </section>
    <section>
   	<% if !@users.nil? %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    <% end %>
    </section>
  </aside>
  <div class="span8">

        <%= render :partial => 'posts/activity_post', :locals => {:post => @post} %>

  </div>
    <div class="span8">
    <ol class="microposts">
             <% @activity.posts.each do |post| %>
             <%= render :partial => 'posts/post', :locals => {:post => post} %>
             <% end %>
    </ol>
  </div>
</div>